---
import { t, changeLanguage } from "i18next";
import BaseLayout from "../../layouts/BaseLayout.astro";
import HeroLayout from "../../layouts/HeroLayout/HeroLayout.astro";
import AllExpeditionsLayout from "../../layouts/Expeditions/AllExpeditionsLayout/AllExpeditionsLayout.astro";
import ExpedImg from "../../assets/images/hero/austin-ban-juHayWuaaoQ-unsplash.webp";
import ExpedImgMobile from "../../assets/images/hero/austin-ban-juHayWuaaoQ-unsplash-m.webp";

changeLanguage("es");
---
<BaseLayout>
	<HeroLayout
		heroSection="expeditions"
		heroTitle1={t("expeditions:expeditions.hero-title-1")}
		heroTitle2={t("expeditions:expeditions.hero-title-2")}
		heroImg={ExpedImg}
		heroImgMobile={ExpedImgMobile}
	/>
    <AllExpeditionsLayout />
</BaseLayout>
