---
import './HomeReviewsLayout.less';
import Img1 from "../../../assets/images/austin-ban-juHayWuaaoQ-unsplash.jpg";
import Img2 from "../../../assets/images/tiago-rosado-cMG5qjpnsyg-unsplash.jpg";
import Img3 from "../../../assets/images/what-we-offer.jpg";

import HomeCarousel from '../../../components/HomeCarousel/HomeCarousel.astro';
---
<!-- ============================================ -->
<!--           Homepage - Reviews Section         -->
<!-- ============================================ -->
<section id="reviews-section">
	<div class="container">
		<div class="content">
			<span class="topper">Reviews</span>
			<h2 class="section-title title reviews-title">
				Success measured in smiles
			</h2>
		</div>
        <div class="reviews-images-container">
			<picture class="reviews-img">
				<source
					media="(max-width: 480px)"
					srcset={Img1.src}
				/>
				<source
					media="(min-width: 480px)"
					srcset={Img1.src}
				/>
				<img
					loading="lazy"
					decoding="async"
					src={Img1.src}
					alt="people outside"
					width="254"
					height="262"
				/>
			</picture>
			<picture class="reviews-img">
				<source
					media="(max-width: 480px)"
					srcset={Img2.src}
				/>
				<source
					media="(min-width: 480px)"
					srcset={Img2.src}
				/>
				<img
					loading="lazy"
					decoding="async"
					src={Img2.src}
					alt="people outside"
					width="254"
					height="262"
				/>
			</picture>
			<picture class="reviews-img">
				<source
					media="(max-width: 480px)"
					srcset={Img3.src}
				/>
				<source
					media="(min-width: 480px)"
					srcset={Img3.src}
				/>
