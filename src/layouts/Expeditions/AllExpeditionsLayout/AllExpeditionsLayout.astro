---
import "./AllExpeditionsLayout.less";
import ExpeditionCard from "../../../components/ExpeditionCard/ExpeditionCard.astro";
import SeeAllButton from "../../../components/SeeAllButton/SeeAllButton.astro";
import { localizePath } from "astro-i18next";
import SeeLessButton from "../../../components/SeeLessButton/SeeLessButton.astro";
import { t } from "i18next";
import { allClimbs, extraClimbs, allTreks, extraTreks } from "../../../assets/data/allServices.js";
import climb1Img from "../../../assets/images/climb-1.jpg";
import climb2Img from "../../../assets/images/climb-2.jpg";
import climb3Img from "../../../assets/images/climb-3.jpg";
import climb4Img from "../../../assets/images/climb-4.jpg";

const climbImgDict = {
	1: {default: climb1Img, mobile: climb1Img},
	2: {default: climb3Img, mobile: climb3Img},
	3: {default: climb2Img, mobile: climb2Img},
	4: {default: climb4Img, mobile: climb4Img},
	5: {default: climb1Img, mobile: climb1Img},
	6: {default: climb3Img, mobile: climb3Img},
	7: {default: climb2Img, mobile: climb2Img},
	8: {default: climb4Img, mobile: climb4Img},
	9: {default: climb3Img, mobile: climb3Img}
};
import trek1Img from "../../../assets/images/trek-1.jpg";
import trek2Img from "../../../assets/images/trek-2.jpg";
import trek3Img from "../../../assets/images/trek-3.jpg";

const trekImgDict = {
	1: {default: trek1Img, mobile: trek1Img},
	2: {default: trek2Img, mobile: trek2Img},
	3: {default: trek1Img, mobile: trek1Img},
	4: {default: trek3Img, mobile: trek3Img},
	5: {default: trek1Img, mobile: trek1Img},
	6: {default: trek1Img, mobile: trek1Img},
	7: {default: trek2Img, mobile: trek2Img},
	8: {default: trek3Img, mobile: trek3Img},
	9: {default: trek2Img, mobile: trek2Img}
};
---
<section class="all-expeditions-section">
    <div class="container">
        <div class="all-expetitions-container">
            <div class="content">
                <span class="topper" set:html={t("expeditions:expeditions.all-climbs.topper")} />
                <h2 class="section-title title gallery-title" 
                    set:html={t("expeditions:expeditions.all-climbs.title")}
                />
            </div>
            {
                allClimbs.map((climb) => 
                    <ExpeditionCard 
                        id={climb.id} 
                        type={t(`expeditions:expeditions.all-climbs.climb-${climb.id}.type`)}
                        name={t(`expeditions:expeditions.all-climbs.climb-${climb.id}.name`)}
                        difficulty={t(`expeditions:expeditions.all-climbs.climb-${climb.id}.difficulty`)}
                        altitude={t(`expeditions:expeditions.all-climbs.climb-${climb.id}.altitude`)}
                        duration={t(`expeditions:expeditions.all-climbs.climb-${climb.id}.duration`)}
                        description={t(`expeditions:expeditions.all-climbs.climb-${climb.id}.description`)}
                        mobileImg={climbImgDict[climb.id].mobile.src}
                        defaultImg={climbImgDict[climb.id].default.src}
                        url={localizePath("expeditions/" + t(`expeditions:expeditions.all-climbs.climb-${climb.id}.url`))}
                    />
                )
            }
            <SeeAllButton seeAllText={t("expeditions:expeditions.all-climbs.see-all-text")} type="climbs"/>
            <div id="extra-climbs-container" class="all-expetitions-container">
                {
                    extraClimbs.map((climb) => 
                        <ExpeditionCard 
                            id={climb.id} 
                            type={t(`expeditions:expeditions.extra-climbs.climb-${climb.id}.type`)}
                            name={t(`expeditions:expeditions.extra-climbs.climb-${climb.id}.name`)}
                            difficulty={t(`expeditions:expeditions.extra-climbs.climb-${climb.id}.difficulty`)}
                            altitude={t(`expeditions:expeditions.extra-climbs.climb-${climb.id}.altitude`)}
                            duration={t(`expeditions:expeditions.extra-climbs.climb-${climb.id}.duration`)}
                            description={t(`expeditions:expeditions.extra-climbs.climb-${climb.id}.description`)}
                            mobileImg={climbImgDict[climb.id].mobile.src}
                            defaultImg={climbImgDict[climb.id].default.src}
                            hidden={false}
                            url={localizePath("expeditions/" + t(`expeditions:expeditions.all-climbs.climb-${climb.id}.url`))}
                        />
                    )
                }
            </div>
            <SeeLessButton seeLessText={t("common.see-less")} type="climbs"/>
        </div>
    </div>
</section>
<section class="all-expeditions-section">
    <div class="container">
        <div class="all-expetitions-container">
            <div class="content trek-content">
                <span class="topper">{t("expeditions:expeditions.all-treks.topper")}</span>
                <h2 class="section-title title gallery-title">
                    {t("expeditions:expeditions.all-treks.title")}
                </h2>
            </div>
            {
                allTreks.map(trek => 
                    <ExpeditionCard 
                        id={trek.id} 
                        type={t(`expeditions:expeditions.all-treks.trek-${trek.id}.type`)}
                        name={t(`expeditions:expeditions.all-treks.trek-${trek.id}.name`)}
                        difficulty={t(`expeditions:expeditions.all-treks.trek-${trek.id}.difficulty`)}
                        altitude={t(`expeditions:expeditions.all-treks.trek-${trek.id}.altitude`)}
                        duration={t(`expeditions:expeditions.all-treks.trek-${trek.id}.duration`)}
                        description={t(`expeditions:expeditions.all-treks.trek-${trek.id}.description`)}
                        mobileImg={climbImgDict[trek.id].mobile.src}
                        defaultImg={climbImgDict[trek.id].default.src}
                        url={localizePath("expeditions/" + t(`expeditions:expeditions.all-treks.trek-${trek.id}.url`))}
                    />
                )
            }
            <SeeAllButton seeAllText={t("expeditions:expeditions.all-treks.see-all-text")} type="treks"/>
            <div id="extra-treks-container" class="all-expetitions-container">
                {
                    extraTreks.map((trek) => 
                        <ExpeditionCard 
                            id={trek.id} 
                            type={t(`expeditions:expeditions.extra-treks.trek-${trek.id}.type`)}
                            name={t(`expeditions:expeditions.extra-treks.trek-${trek.id}.name`)}
                            difficulty={t(`expeditions:expeditions.extra-treks.trek-${trek.id}.difficulty`)}
                            altitude={t(`expeditions:expeditions.extra-treks.trek-${trek.id}.altitude`)}
                            duration={t(`expeditions:expeditions.extra-treks.trek-${trek.id}.duration`)}
                            description={t(`expeditions:expeditions.extra-treks.trek-${trek.id}.description`)}
                            mobileImg={climbImgDict[trek.id].mobile.src}
                            defaultImg={climbImgDict[trek.id].default.src}
                            url={t(`expeditions:expeditions.extra-treks.trek-${trek.id}.url`)}
                            hidden={false}
                            url={localizePath("expeditions/" + t(`expeditions:expeditions.all-treks.trek-${trek.id}.url`))}
                        />
                    )
                }
            </div>
            <SeeLessButton seeLessText={t("common.see-less")} type="treks"/>
        </div>
    </div>
</section>