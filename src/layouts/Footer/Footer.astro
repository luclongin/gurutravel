---
import './Footer.less';
import { t } from "i18next";
import { Image } from "astro:assets";
import mailImg from "../../assets/svg/email.png";
import Logo from "../../assets/images/gurutravel_logo.png";
import IconAndLabel from '../../components/IconAndLabel/IconAndLabel.astro';
---
<!-- ============================================ -->
<!--                   Footer                     -->
<!-- ============================================ -->
<footer id="footer-section">
    <div class="container">
        <div class="logo-group">
            <a aria-label="go back to home" class="logo" href="">
                <Image src={Logo} class="logo-img" alt="Guru Travel Logo" width="240" height="32"/>
            </a>
            <p class="text" set:html={t("footer:footer.bottom-nav.text")} />
            <IconAndLabel 
                value="contact@gurutravel.com"
                imgSrc={mailImg}   
            />
        </div>

        <!-- Links -->
        <ul class="footer-nav">
            <li class="footer-nav-li">
                <span class="footer-nav-header">{t("common.about")}</span>
            </li>
            <li class="footer-nav-li">
                <a class="footer-nav-link" href="/about">{t("common.our-story")}</a>
            </li>
            <li class="footer-nav-li">
                <a class="footer-nav-link" href="/about">{t("common.team")}</a>
            </li>
            <li class="footer-nav-li">
                <a class="footer-nav-link" href="/gallery">{t("common.gallery")}</a>
            </li>
        </ul>
        <ul class="footer-nav">
            <li class="footer-nav-li">
                <span class="footer-nav-header">{t("common.expeditions")}</span>
            </li>
            <li class="footer-nav-li">
                <a class="footer-nav-link" href="/expeditions">{t("common.popular-climbs")}</a>
            </li>
            <li class="footer-nav-li">
                <a class="footer-nav-link" href="/expeditions">{t("common.popular-treks")}</a>
            </li>
            <li class="footer-nav-li">
                <a class="footer-nav-link" href="/expeditions">{t("common.all-climbs-and-treks")}</a>
            </li>
        </ul>
        <ul class="footer-nav">
            <li class="footer-nav-li">
                <span class="footer-nav-header">{t("common.enquire")}</span>
            </li>
            <li class="footer-nav-li">
                <a class="footer-nav-link" href="/about/#enquire">{t("common.contact-information")}</a>
            </li>
            <li class="footer-nav-li">
                <a class="footer-nav-link" href="/about/#enquire">{t("common.our-office")}</a>
            </li>
        </ul>
    </div>
</footer>           