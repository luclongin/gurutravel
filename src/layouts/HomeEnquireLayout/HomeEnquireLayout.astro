---
import './HomeEnquireLayout.less';
import IconAndLabel from "../../components/IconAndLabel/IconAndLabel.astro";
import WhatsappButton from '../../components/WhatsappButton/WhatsappButton.astro';
---

<section id="home-enquire-section">
    <div class="container">
        <!-- Left section -->
		<div class="home-enquire-images-container">
			<picture class="enquire-img">
				<source
					media="(max-width: 480px)"
					srcset="https://csimg.nyc3.digitaloceanspaces.com/SideBySide/outdoors-m.jpg"
				/>
				<source
					media="(min-width: 480px)"
					srcset="https://csimg.nyc3.digitaloceanspaces.com/SideBySide/outdoors.jpg"
				/>
				<img
					loading="lazy"
					decoding="async"
					src="https://csimg.nyc3.digitaloceanspaces.com/SideBySide/outdoors.jpg"
					alt="people outside"
					width="254"
					height="262"
				/>
			</picture>
        </div>
        <!-- Right Section -->
		<div class="content">
			<span class="topper">Enquire</span>
			<h2 class="section-title title">Let's Get In Touch</h2>
			<IconAndLabel label="Phone" value="(+51) 983 700 901"/>
			<IconAndLabel label="Email" value="enquire@gurutravel.com"/>
			<div class="dotted-line"></div>
			<WhatsappButton />
			<div class="dotted-line"></div>
			<div class="enquire-maps-container">
				<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3934.7797382201557!2d-77.53209187027657!3d-9.527856448275278!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x91a90d1051f3bf5f%3A0x84e830468cdaa5c8!2sPERU%20TOUR%20VIAJES%20Y%20TURISMO%20HUARAZ-ANCASH!5e0!3m2!1sen!2spe!4v1695149954027!5m2!1sen!2spe" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
				<div class="enquire-office-address">
					<p class="subtitle">Our Office</p>
					<p class="bold">
						Av. 27 de Noviembre 819, Huaraz, Per&uacute;
					</p>
				</div>
				<div class="enquire-office-hours-container">
					<div class="enquire-office-hours">
						<p class="subtitle">Mon-Fri</p>
						<p class="">
							7:00 AM - 5:00 PM
						</p>
					</div>
					<div class="enquire-office-hours">
						<p class="subtitle">Sat-Sun</p>
						<p class="">
							9:00 AM - 4:00 PM
						</p>
					</div>
				</div>
			</div>
		</div>
    </div>
</section>