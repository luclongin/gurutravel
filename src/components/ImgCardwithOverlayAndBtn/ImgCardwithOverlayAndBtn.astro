---
const { title, cardClass, imgSrc } = Astro.props;
import "./ImgCardwithOverlayAndBtn.less";
---
<!-- Flexible image with black overlay at the bottom for white text -->
<div class=`img-card-overlay ${cardClass}`>
	<div class=`img-overlay`></div>
	<picture class=`img-card-overlay-img`>
		<source media="(max-width: 480px)" srcset={imgSrc.src} />
		<source media="(min-width: 480px)" srcset={imgSrc.src} />
		<img
			loading="lazy"
			decoding="async"
			srcset={imgSrc.src}
			alt="people outside"
			width="254"
			height="262"
		/>
	</picture>
	<div class="img-card-overlay-text">
		<p>{title}</p>
		<a href="#enquire-btn" class="solid-btn overlay-btn">Enquire Now</a>
	</div>
</div>