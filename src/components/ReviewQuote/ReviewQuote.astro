---
import QuoteUserProfile from '../QuoteUserProfile/QuoteUserProfile.astro';
import CarouselCircles from '../CarouselCircles/CarouselCircles.astro';
import './ReviewQuote.less';
import { Image } from "astro:assets";
import leftQuote from "../../assets/images/left-quote.png";
import rightQuote from "../../assets/images/right-quote.png";

const {clientName, clientDate, clientExpedition, reviewText} = Astro.props;
---

<div class="review-quote">
    <Image
        class="review-left-quote"
        src={leftQuote}
        alt="Left Quote"
    />
    <div class="review-content">
        <p class="review-quote-text text">
            {reviewText}
        </p>
        <QuoteUserProfile clientName={clientName} clientExpedition={clientExpedition} clientDate={clientDate} />
    </div>
    <Image
        class="review-right-quote"
        src={rightQuote}
        alt="Right Quote"
    />
</div>